<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed for the desired roundness -->
            <solid android:color="@color/loading" /> <!-- Define the background color when checked -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Define the background color when unchecked -->
        </shape>
    </item>
</selector>