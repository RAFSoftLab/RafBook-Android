<!-- x_circle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle Background -->

    <!-- X Symbol -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="1dp"
                    android:color="@color/gray5" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="1dp"
                    android:color="@color/gray5"/>
            </shape>
        </rotate>
    </item>
</layer-list>
